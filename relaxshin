<body>

    <h1>修復時光 ‧ 愛的轉盤</h1>
    <p>讓心意隨機流動，感謝美好的相遇</p>

    <div class="wheel-container">
        <div class="pointer"></div>
        <canvas id="wheel" width="400" height="400"></canvas>
    </div>

    <button class="spin-btn" onclick="spinWheel()">啟動轉盤</button>

    <div id="result-modal">
        <h2 id="result-text"></h2>
        <p id="result-desc"></p>
        <button onclick="closeModal()">收下心意</button>
    </div>

    <script>
        const options = [
            { title: "生活小確幸", desc: "請我喝一杯最近你心頭好的飲料（記得要無糖唷 XDD）" },
            { title: "專業應援", desc: "回家感受身體變化，傳 Line 給我詳細回饋，這對我很重要！" },
            { title: "技能交換", desc: "當我的一日老師！分享一個你擅長的領域或最近學到的新知。" },
            { title: "耗材回饋", desc: "隨喜贊助今日耗材，這筆錢會投入「未來小洵基金會」公積金盒中。" },
            { title: "身心修復", desc: "回家後心無罣礙地好好睡一覺，這就是對我手藝最好的讚美！" }
        ];

        const canvas = document.getElementById('wheel');
        const ctx = canvas.getContext('2d');
        const colors = ['#f5cac3', '#f6bd60', '#84a59d', '#f28482', '#9ad1d4'];

        function drawWheel() {
            const arc = (2 * Math.PI) / options.length;
            options.forEach((opt, i) => {
                const angle = i * arc;
                ctx.fillStyle = colors[i];
                ctx.beginPath();
                ctx.moveTo(200, 200);
                ctx.arc(200, 200, 200, angle, angle + arc);
                ctx.fill();

                ctx.save();
                ctx.translate(200, 200);
                ctx.rotate(angle + arc / 2);
                ctx.textAlign = "right";
                ctx.fillStyle = "#fff";
                ctx.font = "bold 18px sans-serif";
                ctx.fillText(opt.title, 180, 10);
                ctx.restore();
            });
        }

        let currentRotation = 0;
        function spinWheel() {
            const randomSpin = Math.floor(Math.random() * 360) + 1440; // 旋轉至少4圈
            currentRotation += randomSpin;
            canvas.style.transform = `rotate(${currentRotation}deg)`;

            setTimeout(() => {
                const actualDeg = currentRotation % 360;
                const index = Math.floor((360 - (actualDeg % 360)) / (360 / options.length)) % options.length;
                showResult(options[index]);
            }, 4000);
        }

        function showResult(opt) {
            document.getElementById('result-text').innerText = opt.title;
            document.getElementById('result-desc').innerText = opt.desc;
            document.getElementById('result-modal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('result-modal').style.display = 'none';
        }

        drawWheel();
    </script>
</body>
</html>

  <script>
    // === mock 測試資料（先看畫面用） ===
    const mockData = {
      quantitative: {
        summary: {
          avg_adopt_days: 4.2,
          adoption_rate: 0.82,
          conversion_rate: 0.37
        },
        rows: [
          {
            wish_name: "藍色的遙控汽車",
            listed_at: "2025/10/27 12:01",
            adopted_at: "2025/10/29 20:15",
            clicks: 127,
            status: "已認養"
          },
          {
            wish_name: "超人力霸王樂高積木",
            listed_at: "2025/10/27 14:04",
            adopted_at: "2025/11/01 19:03",
            clicks: 91,
            status: "已認養"
          },
          {
            wish_name: "球鞋一雙",
            listed_at: "2025/10/28 09:20",
            adopted_at: null,
            clicks: 63,
            status: "待認養"
          }
        ]
      },
      esg: {
        summary: {
          total_co2e: 128.5
        },
        sdg_counts: [
          { sdg: "SDG 4", count: 23 },
          { sdg: "SDG 10", count: 7 },
          { sdg: "SDG 12", count: 17 }
        ],
        rows: [
          {
            wish_name: "藍色的遙控汽車",
            category: "學習與遊戲",
            item_status: "全新",
            co2e: 3.5,
            sdgs: ["SDG 4", "SDG 12"]
          },
          {
            wish_name: "球鞋一雙",
            category: "運動與體育",
            item_status: "近新",
            co2e: 4.8,
            sdgs: ["SDG 3", "SDG 10"]
          }
        ]
      },
      participation: {
        summary: {
          new_participant_ratio: 0.42,
          avg_depth: 3.1
        },
        rows: [
          { adopter_id: "54903", history_count: 4, is_new: false },
          { adopter_id: "45794", history_count: 1, is_new: true },
          { adopter_id: "58096", history_count: 2, is_new: false }
        ]
      },
      stories: [
        {
          student_name: "陳宥丞",
          school: "嘉義縣灣內國小",
          quote: "我終於有球鞋可以跑步了！"
        },
        {
          student_name: "林小安",
          school: "更寮國小",
          quote: "下課可以跟同學一起玩直排輪了。"
        }
      ],
      experience: {
        summary: {
          avg_score: 4.8
        },
        rows: [
          {
            score: 5,
            comment: "流程順暢，3分鐘完成認養。"
          },
          {
            score: 4,
            comment: "操作簡單，如果可以多看幾張照片就更好了。"
          }
        ]
      }
    };

    let sdgChartInstance = null;

    async function loadData() {
      const errorEl = document.getElementById("error");

      try {
        // === 如果要接後端，把下面兩行改成 fetch ===
        // const API_URL = 'https://your-gas-or-api-url/exec';
        // const data = await (await fetch(API_URL)).json();
        const data = mockData; // 目前用 mock 測試

        errorEl.style.display = "none";
        renderKpis(data);
        renderQuantitativeTable(data);
        renderEsg(data);
        renderParticipation(data);
        renderStories(data);
        renderExperience(data);
      } catch (e) {
        console.error(e);
        errorEl.textContent =
          "載入資料時發生問題，請稍後再試或檢查後端 API。";
        errorEl.style.display = "block";
      }
    }

    function formatPercent(value) {
      if (value === null || value === undefined || isNaN(value)) return "--";
      return (value * 100).toFixed(1) + "%";
    }

    function renderKpis(data) {
      const kpiGrid = document.getElementById("kpi-grid");
      kpiGrid.innerHTML = "";

      const q = data.quantitative?.summary || {};
      const p = data.participation?.summary || {};
      const e = data.experience?.summary || {};

      const items = [
        {
          label: "平均認養天數",
          value:
            q.avg_adopt_days !== undefined
              ? q.avg_adopt_days.toFixed(1) + " 天"
              : "--",
          tagline: "從上架到被認養的平均等待時間"
        },
        {
          label: "認養完成率",
          value: formatPercent(q.adoption_rate),
          tagline: "本批心願中已被認養的比例"
        },
        {
          label: "轉換率（點擊 → 認養）",
          value: formatPercent(q.conversion_rate),
          tagline: "有點擊且完成認養的比例"
        },
        {
          label: "新公益參與者比例",
          value: formatPercent(p.new_participant_ratio),
          tagline: "第一次做公益的認養人比例"
        }
      ];

      items.forEach((kpi) => {
        const div = document.createElement("div");
        div.className = "kpi-card";
        div.innerHTML = `
          <div class="kpi-label">${kpi.label}</div>
          <div class="kpi-value">${kpi.value}</div>
          <div class="kpi-tagline">${kpi.tagline}</div>
        `;
        kpiGrid.appendChild(div);
      });
    }

    function renderQuantitativeTable(data) {
      const tbody = document.getElementById("quantitative-rows");
      tbody.innerHTML = "";

      const rows = data.quantitative?.rows || [];
      rows.forEach((row) => {
        const tr = document.createElement("tr");

        const statusClass =
          row.status === "已認養"
            ? "status-pill"
            : row.status === "待認養"
            ? "status-pill pending"
            : "status-pill failed";

        tr.innerHTML = `
          <td>${row.wish_name || "-"}</td>
          <td>${row.listed_at || "-"}</td>
          <td>${row.adopted_at || "-"}</td>
          <td>${row.clicks ?? "-"}</td>
          <td><span class="${statusClass}">${row.status || "-"}</span></td>
        `;
        tbody.appendChild(tr);
      });
    }

    function renderEsg(data) {
      // 總減碳
      const total = data.esg?.summary?.total_co2e;
      document.getElementById("total-co2").textContent =
        total !== undefined ? total.toFixed(1) + " kg" : "--";

      // ESG 表格
      const tbody = document.getElementById("esg-rows");
      tbody.innerHTML = "";

      const rows = data.esg?.rows || [];
      rows.forEach((row) => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${row.wish_name || "-"}</td>
          <td>${row.category || "-"}</td>
          <td>${row.item_status || "-"}</td>
          <td>${row.co2e !== undefined ? row.co2e.toFixed(1) : "-"}</td>
          <td>${Array.isArray(row.sdgs) ? row.sdgs.join(", ") : "-"}</td>
        `;
        tbody.appendChild(tr);
      });

      // SDG 圖表
      const sdgData = data.esg?.sdg_counts || [];
      const labels = sdgData.map((d) => d.sdg);
      const values = sdgData.map((d) => d.count);

      const ctx = document.getElementById("sdgChart");
      if (!ctx) return;

      if (sdgChartInstance) {
        sdgChartInstance.destroy();
      }

      sdgChartInstance = new Chart(ctx, {
        type: "bar",
        data: {
          labels,
          datasets: [
            {
              label: "心願數量",
              data: values,
              borderWidth: 1
            }
          ]
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              display: false
            }
          },
          scales: {
            x: {
              ticks: {
                font: { size: 10 }
              }
            },
            y: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });
    }

    function renderParticipation(data) {
      const sum = data.participation?.summary || {};
      const newRatio = sum.new_participant_ratio;
      const avgDepth = sum.avg_depth;

      document.getElementById("new-participation").textContent =
        newRatio !== undefined ? formatPercent(newRatio) : "--";
      document.getElementById("avg-depth").textContent =
        avgDepth !== undefined ? avgDepth.toFixed(1) + " 次" : "--";

      const tbody = document.getElementById("participation-rows");
      tbody.innerHTML = "";

      const rows = data.participation?.rows || [];
      rows.forEach((row) => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${row.adopter_id || "-"}</td>
          <td>${row.history_count ?? "-"}</td>
          <td>${
            row.is_new ? "是（首次參與）" : "否（持續認養）"
          }</td>
        `;
        tbody.appendChild(tr);
      });
    }

    function renderStories(data) {
      const container = document.getElementById("story-list");
      container.innerHTML = "";

      const stories = data.stories || [];
      stories.forEach((s) => {
        const div = document.createElement("div");
        div.className = "story-item";
        div.innerHTML = `
          <div class="story-meta">${s.school || ""} · ${
          s.student_name || ""
        }</div>
          <div class="story-quote">${s.quote || ""}</div>
        `;
        container.appendChild(div);
      });

      if (stories.length === 0) {
        const empty = document.createElement("div");
        empty.className = "story-item";
        empty.innerHTML =
          '<div class="story-meta">尚未蒐集回饋</div><div class="story-quote">這批心願完成後，我們會向老師與孩子邀請一句話的回應。</div>';
        container.appendChild(empty);
      }
    }

    function renderExperience(data) {
      const sum = data.experience?.summary || {};
      const avg = sum.avg_score;
      document.getElementById("avg-score").textContent =
        avg !== undefined ? avg.toFixed(1) + " 分" : "--";

      const container = document.getElementById("experience-rows");
      container.innerHTML = "";

      const rows = data.experience?.rows || [];
      rows.forEach((row) => {
        const div = document.createElement("div");
        div.style.marginBottom = "8px";

        const starsCount = Math.round(row.score || 0);
        const stars =
          "★★★★★".slice(0, starsCount) +
          "☆☆☆☆☆".slice(0, 5 - starsCount);

        div.innerHTML = `
          <div class="rating-row">
            <span class="stars">${stars}</span>
            <span style="font-size:11px; color:var(--text-sub); margin-left:4px;">
              ${row.score?.toFixed ? row.score.toFixed(1) : row.score || ""} 分
            </span>
          </div>
          <div class="comment-text">${row.comment || ""}</div>
        `;
        container.appendChild(div);
      });

      if (rows.length === 0) {
        const empty = document.createElement("div");
        empty.className = "comment-text";
        empty.textContent = "尚未蒐集領養體驗評分。";
        container.appendChild(empty);
      }
    }

    document.addEventListener("DOMContentLoaded", loadData);
  </script>
</body>
</html>
